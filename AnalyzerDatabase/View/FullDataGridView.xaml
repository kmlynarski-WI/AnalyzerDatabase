                                       Text="{Binding Isbn}" />

                            <TextBlock Text="{x:Static res:Resources.DoiDataGrid}" 
                                       Grid.Row="10" Grid.Column="0" 
                                       FontWeight="Bold" 
                                       Foreground="Black" 
                                       HorizontalAlignment="Right"/>
                            <Button Grid.Column="1" Grid.Row="10"
                                    HorizontalAlignment="Left"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Foreground="Black"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontStyle="Normal"
                                    FontSize="11"
                                    Width="Auto" Height="Auto"
                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.OpenPageWithDoi}">
                                <TextBlock Text="{Binding Doi}" TextDecorations="Underline" Foreground="Blue"/>
                            </Button>

                            <TextBlock Text="{x:Static res:Resources.PiiDataGrid}" 
                                       Grid.Row="11" Grid.Column="0"
                                       FontWeight="Bold" 
                                       Foreground="Black" 
                                       HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="1" Grid.Row="11" 
                                       Foreground="Black"
                                       Text="{Binding Pii}" />

                            <StackPanel Grid.Column="0" Grid.Row="13" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Rectangle Width="20" Height="20" Fill="{DynamicResource BlackBrush}">
                                    <Rectangle.OpacityMask>
                                        <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_book_open_writing}"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                                <TextBlock Text=" "></TextBlock>
                                <TextBlock Text="{x:Static res:Resources.AbstractDataGrid}" 
                                       Grid.Row="13" Grid.Column="0"
                                       FontWeight="Bold" 
                                       Foreground="Black" 
                                       HorizontalAlignment="Right"/>
                            </StackPanel>
                            <TextBlock Grid.Row="13" Grid.Column="1"
                                    TextWrapping="Wrap"
                                    TextAlignment="Justify"
                                    Foreground="Black"
                                    Text="{Binding Abstract}" />

                            <StackPanel Grid.Column="3" Grid.Row="0">
                                <Button Grid.Row="0" Grid.Column="3"
                                        Background="Transparent"
                                        Foreground="Transparent"
                                        BorderThickness="0" BorderBrush="Transparent"
                                        Width="75" Height="75"
                                        ToolTip="{x:Static res:Resources.DownloadPublication}"
                                        Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.DownloadArticleToPdf}">
                                    <Rectangle Width="55" Height="55" Fill="{DynamicResource BlackBrush}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_page_file_pdf_tag}"/>
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>

                                <controls:MetroProgressBar Foreground="Blue" IsIndeterminate="True" Visibility="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.IsDownloadFile, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            </StackPanel>
                        </Grid>
                    </DockPanel>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>

        <controls:ProgressRing IsActive="{Binding IsDataLoading}" />

        <!-- Stronicowanie -->
        <Button x:Name="BtnPrev"
                Margin="325,5,400,0" Width="35" Height="35"
                IsEnabled="{Binding IsDataLoading, Converter={StaticResource NegativeBooleanToVisibilityConverter}}"
                Command="{Binding PrevResultPage}"
                ToolTip="{x:Static res:Resources.PrevBtn}"
                Visibility="{Binding FullResultsList, Converter={StaticResource NegativeBooleanToVisibilityConverter}}"
                HorizontalAlignment="Center" VerticalAlignment="Top">
            <Rectangle Width="17" Height="17" Fill="{DynamicResource BlackBrush}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_navigate_previous}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>
        <TextBlock Text=". . ."
                   FontSize="20"
                   HorizontalAlignment="Center"
                   Visibility="{Binding FullResultsList, Converter={StaticResource NegativeBooleanToVisibilityConverter}}"
                   Margin="368,18,368,464"/>
        <Button x:Name="BtnNext" 
                Width="35" Height="35" Margin="400,5,325,0"
                ToolTip="{x:Static res:Resources.NextBtn}" 
                Command="{Binding NextResultPage}"
                IsEnabled="{Binding IsDataLoading, Converter={StaticResource NegativeBooleanToVisibilityConverter}}"
                Visibility="{Binding FullResultsList, Converter={StaticResource NegativeBooleanToVisibilityConverter}}"
                HorizontalAlignment="Center" VerticalAlignment="Top">
            <Rectangle Width="17" Height="17" Fill="{DynamicResource BlackBrush}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_navigate_next}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>

        <!-- Pełna lista wyników -->
        <Button x:Name="ShowAllResults"
                Width="35" Height="35" Margin="10,5,0,0"
                ToolTip="{x:Static res:Resources.ShowFullListWithData}" 
                Command="{Binding FullResultsListCommand}"
                Visibility="{Binding FullResultsList, Converter={StaticResource NegativeBooleanToVisibilityConverter}}"
                HorizontalAlignment="Left" VerticalAlignment="Top">
            <Rectangle Width="24" Height="24" Fill="{DynamicResource BlackBrush}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_list}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>

        <Button x:Name="BackToDataGridResults"
                Width="35" Height="35" Margin="10,5,0,0"
                ToolTip="{x:Static res:Resources.ShowGroupsResults}" 
                Command="{Binding FullResultsListCommand}"
                Visibility="{Binding FullResultsList, Converter={StaticResource BooleanToVisibilityConverter}}"
                HorizontalAlignment="Left" VerticalAlignment="Top">
            <Rectangle Width="24" Height="24" Fill="{DynamicResource BlackBrush}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_list_merge}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>

        <!-- Export DataGrida do pliku .csv -->
        <Button x:Name="DataGridToCsv" 
                    Command="{Binding DataGridToCsvExport}"
                    ToolTip="{x:Static res:Resources.ExportToCsv}"
                    Visibility="{Binding FullResultsList, Converter={StaticResource BooleanToVisibilityConverter}}"
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    Margin="50,5,0,0" Height="35" Width="35">
            <Rectangle Width="24" Height="24" Fill="{DynamicResource BlackBrush}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_office_excel}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>
    </Grid>
</controls:MetroWindow>
