<controls:MetroWindow x:Class="AnalyzerDatabase.View.FullDataGridView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:AnalyzerDatabase.Converters"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:res="clr-namespace:AnalyzerDatabase.Properties"
        mc:Ignorable="d"
        Title="Received results"
        DataContext="{Binding Source={StaticResource Locator}, Path=SearchDatabase}"
                      
        BorderThickness="0" 
        GlowBrush="Black" 
        ResizeMode="CanResizeWithGrip"    
        WindowState="Maximized"
        WindowTransitionsEnabled="False"
        WindowStartupLocation="CenterScreen"
        Icon="../AnalyzerDatabaseIcon2.ico">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:NegativeBooleanToVisibilityConverter x:Key="NegativeBooleanToVisibilityConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:GroupsToTotalConverter x:Key="GroupsToTotalConverter"/>
    </Window.Resources>

    <Grid>
        <TextBlock Text="{x:Static res:Resources.NoDataToDisplayInDataGrid}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Visibility="{Binding IsDataEmpty, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        <!-- Extended DataGrid -->
        <DataGrid x:Name="ExtendedDataGrid"
                    ItemsSource="{Binding CollectionView}"
                    SelectedItem="{Binding DoiAndTitleAndAbstract}"
                    Visibility="{Binding DataGridResults, Converter={StaticResource BooleanToVisibilityConverter}}"
                    AutoGenerateColumns="False"
                    HorizontalAlignment="Stretch"
                    Margin="0,45,0,0"
                    VerticalAlignment="Top"
                    AlternatingRowBackground="Gainsboro"
                    AlternationCount="2"
                    CanUserReorderColumns="True"
                    CanUserResizeColumns="True"
                    CanUserResizeRows="True"
                    CanUserSortColumns="True"
                    FrozenColumnCount="2"                   
                    Style="{StaticResource AzureDataGrid}">

            <!-- Grupowanie po danej bazie -->
            <DataGrid.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <TextBlock Text="{Binding Path=Name}"></TextBlock>
                            </DockPanel>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <Expander IsExpanded="True">
                                            <Expander.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Path=Name}"/>
                                                    <TextBlock Text=" "/>
                                                    <TextBlock Text="{Binding Path=ItemCount}"/>
                                                    <!--<TextBlock Text="{Binding Path=ItemCount, Converter={StaticResource GroupsToTotalConverter}}"/>-->
                                                </StackPanel>
                                            </Expander.Header>
                                            <Expander.Content>
                                                <ItemsPresenter />
                                            </Expander.Content>
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </DataGrid.GroupStyle>

            <!-- Kolumny w data gridzie -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="%" Binding="{Binding PercentComplete, StringFormat='{}{0:0.##}%'}" IsReadOnly="True" CanUserResize="False">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Setter Property="Background" Value="{Binding IsDuplicate, Converter={StaticResource BoolToColorConverter}}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <!--<DataGridCheckBoxColumn ElementStyle="{DynamicResource MetroDataGridCheckBox}"
                                        EditingElementStyle="{DynamicResource MetroDataGridCheckBox}"
                                        CanUserResize="False"
                                        Header="{x:Static res:Resources.Selected}"
                                        Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected, Mode=OneWay}"/>-->
                <DataGridTextColumn Header="{x:Static res:Resources.AuthorDataGridHeader}" Binding="{Binding Creator}" IsReadOnly="True" CanUserResize="False" Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Setter Property="Background" Value="{Binding IsDuplicate, Converter={StaticResource BoolToColorConverter}}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="{x:Static res:Resources.TitleDataGridHeader}" Binding="{Binding Title}"  IsReadOnly="True" Width="800">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Setter Property="Background" Value="{Binding IsDuplicate, Converter={StaticResource BoolToColorConverter}}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="ROK" Binding="{Binding Year}" IsReadOnly="True" CanUserResize="False">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Setter Property="Background" Value="{Binding IsDuplicate, Converter={StaticResource BoolToColorConverter}}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="{x:Static res:Resources.DoiDataGridHeader}" Binding="{Binding Doi}" IsReadOnly="True" CanUserResize="False">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Setter Property="Background" Value="{Binding IsDuplicate, Converter={StaticResource BoolToColorConverter}}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>

            <!-- Szczegółowe informacje po rozwinięciu danego wiersza -->
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <DockPanel>
                        <StackPanel>
                            <Rectangle DockPanel.Dock="Left" Width="120" Height="160" Fill="{DynamicResource BlackBrush}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,30,10,0">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_image}"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <!--<TextBlock Text="{x:Static res:Resources.OpenAccessDataGrid}" VerticalAlignment="Center" HorizontalAlignment="Center" />-->
                            <!--<TextBlock Text="{Binding OpenAccess}" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>-->
                        </StackPanel>

                        <Grid Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="600" />
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Button Grid.Column="1" Grid.Row="0"
                                    HorizontalAlignment="Center"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Foreground="Black"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontStyle="Normal"
                                    FontSize="11"
                                    Width="Auto" Height="Auto"
                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.OpenPageWithPublication}">
                                <TextBlock Grid.Row="0" Grid.Column="1"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       FontSize="26"
                                       Foreground="Blue"
                                       FontWeight="ExtraBold"
                                       Text="{Binding Title}"
                                       TextDecorations="Underline"/>
                            </Button>

                            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Rectangle Width="15" Height="15" Fill="{DynamicResource BlackBrush}">
                                    <Rectangle.OpacityMask>
                                        <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_book}"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                                <TextBlock Text=" "></TextBlock>
                                <TextBlock Text="{x:Static res:Resources.PublicationNameDataGrid}"
                                        Grid.Row="2" Grid.Column="0" 
                                        FontWeight="Bold" 
                                        Foreground="Black" 
                                        HorizontalAlignment="Right"/>
                            </StackPanel>
                            <TextBlock Grid.Row="2" Grid.Column="1"
                                        FontWeight="Bold"
                                        Foreground="Black"
                                        Text="{Binding PublicationName}"/>

                            <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Rectangle Grid.Column="0" Grid.Row="3" Width="15" Height="15" Fill="{DynamicResource BlackBrush}">
                                    <Rectangle.OpacityMask>
                                        <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_calendar_day}"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                                <TextBlock Text=" "></TextBlock>
                                <TextBlock Text="{x:Static res:Resources.PublicationDateDataGrid}" 
                                            Grid.Row="3" Grid.Column="0"
                                            FontWeight="Bold" 
                                            Foreground="Black" 
                                            HorizontalAlignment="Right"/>
                            </StackPanel>
                            <TextBlock Grid.Row="3" Grid.Column="1"
                                       Foreground="Black"
                                       Text="{Binding PublicationDate}"/>

                            <StackPanel Grid.Column="0" Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Rectangle Grid.Column="0" Grid.Row="3" Width="15" Height="15" Fill="{DynamicResource BlackBrush}">
                                    <Rectangle.OpacityMask>
                                        <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_group}"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                                <TextBlock Text=" "></TextBlock>
                                <TextBlock Text="{x:Static res:Resources.AuthorDataGrid}" 
                                            Grid.Row="5" Grid.Column="0"
                                            FontWeight="Bold" 
                                            Foreground="Black" 
                                            HorizontalAlignment="Right"/>
                            </StackPanel>
                            <TextBlock Grid.Row="5" Grid.Column="1"
                                        TextWrapping="Wrap"
                                        Foreground="Black"
                                        Text="{Binding Creator}"/>

                            <TextBlock Text="{x:Static res:Resources.VolumeDataGrid}" 
                                       Grid.Row="7" Grid.Column="0"
                                       FontWeight="Bold" 
                                       Foreground="Black" 
                                       HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="1" Grid.Row="7"
                                       Foreground="Black"
                                       Text="{Binding Volume}"/>

                            <TextBlock Margin="50,0,0,0" Text="{x:Static res:Resources.IssueDataGrid}" 
                                       Grid.Column="1" Grid.Row="7"
                                       FontWeight="Bold" 
                                       Foreground="Black"  
                                       HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="1" Grid.Row="7" 
                                       Margin="110,0,0,0"
                                       Foreground="Black"
                                       Text="{Binding IssueIdentifier}"/>

                            <TextBlock Text="{x:Static res:Resources.PageRangeDataGrid}" 
                                       Grid.Row="8" Grid.Column="0"
                                       FontWeight="Bold" 
                                       Foreground="Black"                                     
                                       HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="1" Grid.Row="8" 
                                       Foreground="Black"
                                       Text="{Binding PageRange}" />

                            <TextBlock Text="{x:Static res:Resources.IssnDataGrid}" 
                                       Grid.Row="9" Grid.Column="0"
                                       FontWeight="Bold" 
                                       Foreground="Black" 
                                       HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="1" Grid.Row="9" 
                                       Foreground="Black"
                                       Text="{Binding Issn}" />

                            <TextBlock Margin="120,0,0,0" Text="{x:Static res:Resources.IsbnDataGrid}" 
                                       Grid.Column="1" Grid.Row="9" 
                                       FontWeight="Bold" 
                                       Foreground="Black" 
                                       HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="1" Grid.Row="9" 
                                       Margin="180,0,0,0"
                                       Foreground="Black"
                                       Text="{Binding Isbn}" />

                            <TextBlock Text="{x:Static res:Resources.DoiDataGrid}"
                                       VerticalAlignment="Center"
                                       Grid.Row="10" Grid.Column="0" 
                                       FontWeight="Bold" 
                                       Foreground="Black" 
                                       HorizontalAlignment="Right"/>
                            <Button Grid.Column="1" Grid.Row="10"
                                    HorizontalAlignment="Left"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Foreground="Black"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontStyle="Normal"
                                    FontSize="11"
                                    Width="Auto" Height="Auto"
                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.OpenPageWithDoi}">
                                <TextBlock Text="{Binding Doi}" TextDecorations="Underline" Foreground="Blue"/>
                            </Button>

                            <TextBlock Text="{x:Static res:Resources.PiiDataGrid}" 
                                       Grid.Row="11" Grid.Column="0"
                                       FontWeight="Bold" 
                                       Foreground="Black" 
                                       HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="1" Grid.Row="11" 
                                       Foreground="Black"
                                       Text="{Binding Pii}" />

                            <StackPanel Grid.Column="0" Grid.Row="13" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Rectangle Width="20" Height="20" Fill="{DynamicResource BlackBrush}">
                                    <Rectangle.OpacityMask>
                                        <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_book_open_writing}"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                                <TextBlock Text=" "></TextBlock>
                                <TextBlock Text="{x:Static res:Resources.AbstractDataGrid}" 
                                       Grid.Row="13" Grid.Column="0"
                                       FontWeight="Bold" 
                                       Foreground="Black" 
                                       HorizontalAlignment="Right"/>
                            </StackPanel>
                            <TextBlock Grid.Row="13" Grid.Column="1"
                                    TextWrapping="Wrap"
                                    TextAlignment="Justify"
                                    Foreground="Black"
                                    Text="{Binding Abstract}" />

                            <StackPanel Grid.Column="3" Grid.Row="0">
                                <Button Grid.Row="0" Grid.Column="3"
                                        Background="Transparent"
                                        Foreground="Transparent"
                                        BorderThickness="0" BorderBrush="Transparent"
                                        Width="75" Height="75"
                                        ToolTip="{x:Static res:Resources.DownloadPublication}"
                                        Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.DownloadArticleToPdf}">
                                    <Rectangle Width="55" Height="55" Fill="{DynamicResource BlackBrush}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_page_file_pdf_tag}"/>
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>

                                <controls:MetroProgressBar Foreground="Blue" IsIndeterminate="True" Visibility="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.IsDownloadFile, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            </StackPanel>
                        </Grid>
                    </DockPanel>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>

        <!-- Extended DataGrid Full -->
        <DataGrid x:Name="ExtendedDataGridFull"
                    ItemsSource="{Binding CollectionViewAll}"
                    SelectedItem="{Binding DoiAndTitleAndAbstract}"
                    Visibility="{Binding FullResultsList, Converter={StaticResource BooleanToVisibilityConverter}}"
                    AutoGenerateColumns="False"
                    HorizontalAlignment="Stretch"
                    Margin="0,45,0,0"
                    VerticalAlignment="Top"
                    AlternatingRowBackground="Gainsboro"
                    AlternationCount="2"
                    CanUserReorderColumns="True"
                    CanUserResizeColumns="True"
                    CanUserResizeRows="True"
                    CanUserSortColumns="True"
                    FrozenColumnCount="2"
                    Style="{StaticResource AzureDataGrid}">

